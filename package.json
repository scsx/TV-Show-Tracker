{
  "name": "tv-show-tracker-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for TV Show Tracker Frontend and Backend API",
  "main": "index.js",
  "scripts": {
    "dev:frontend": "npm run dev --workspace frontend",
    "dev:backend": "npm run dev --workspace backend",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "format": "prettier --write \"frontend/**/*.{js,jsx,ts,tsx}\" \"backend/**/*.{js,ts}\"",
    "format:check": "prettier --check \"frontend/**/*.{js,jsx,ts,tsx}\" \"backend/**/*.{js,ts}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.6.2", 
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "typescript": "^5.8.3",
    "@types/node": "^24.0.13",
    "eslint": "^9.30.1",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "@eslint/js": "^9.30.1",
    "globals": "^16.3.0",
    "typescript-eslint": "^8.35.1"
  },
  "dependencies": {},
  "workspaces": [
    "frontend",
    "backend"
  ]
}